                        "parts": [
                            {
                                "id": "03.01.01_smt",
                                "name": "statement",
                                "parts": [
                                    {
                                        "id": "03.01.01_smt.a",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "a."
                                            }
                                        ],
                                        "prose": "Define the types of system accounts allowed and prohibited.",
                                        "parts": []
                                    },
                                    {
                                        "id": "03.01.01_smt.b",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "b."
                                            }
                                        ],
                                        "prose": "Create, enable, modify, disable, and remove system accounts in accordance with policy, procedures, prerequisites, and criteria.",
                                        "parts": []
                                    },
                                    {
                                        "id": "03.01.01_smt.c",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "c."
                                            }
                                        ],
                                        "prose": "Specify:",
                                        "parts": [
                                            {
                                                "id": "03.01.01_smt.c.1",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "1."
                                                    }
                                                ],
                                                "prose": "Authorized users of the system,",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.c.2",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "2."
                                                    }
                                                ],
                                                "prose": "Groups of authorized users of the system, and",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.c.3",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "3."
                                                    }
                                                ],
                                                "prose": "Access authorizations (i.e., privileges) for each account.",
                                                "parts": []
                                            }
                                        ]
                                    },
                                    {
                                        "id": "03.01.01_smt.d",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "d."
                                            }
                                        ],
                                        "prose": "Authorize access to the system based on:",
                                        "parts": [
                                            {
                                                "id": "03.01.01_smt.d.1",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "1."
                                                    }
                                                ],
                                                "prose": "A valid access authorization and",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.d.2",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "2."
                                                    }
                                                ],
                                                "prose": "Intended system usage.",
                                                "parts": []
                                            }
                                        ]
                                    },
                                    {
                                        "id": "03.01.01_smt.e",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "e."
                                            }
                                        ],
                                        "prose": "Monitor the use of system accounts.",
                                        "parts": []
                                    },
                                    {
                                        "id": "03.01.01_smt.f",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "f."
                                            }
                                        ],
                                        "prose": "Disable system accounts when: ",
                                        "parts": [
                                            {
                                                "id": "03.01.01_smt.f.1",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "1."
                                                    }
                                                ],
                                                "prose": "The accounts have expired,",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.f.2",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "2."
                                                    }
                                                ],
                                                "prose": "The accounts have been inactive for at {{ insert: param, 03.01.01_odp.01 }},",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.f.3",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "3."
                                                    }
                                                ],
                                                "prose": "The accounts are no longer associated with a user or individual,",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.f.4",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "4."
                                                    }
                                                ],
                                                "prose": "The accounts are in violation of organizational policy, or",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.f.5",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "5."
                                                    }
                                                ],
                                                "prose": "Significant risks associated with individuals are discovered.",
                                                "parts": []
                                            }
                                        ]
                                    },
                                    {
                                        "id": "03.01.01_smt.g",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "g."
                                            }
                                        ],
                                        "prose": "Notify account managers and designated personnel or roles within:",
                                        "parts": [
                                            {
                                                "id": "03.01.01_smt.g.1",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "1."
                                                    }
                                                ],
                                                "prose": "{{ insert: param, 03.01.01_odp.02 }} when accounts are no longer required.",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.g.2",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "2."
                                                    }
                                                ],
                                                "prose": "{{ insert: param, 03.01.01_odp.03 }} when users are terminated or transferred.",
                                                "parts": []
                                            },
                                            {
                                                "id": "03.01.01_smt.g.3",
                                                "name": "item",
                                                "props": [
                                                    {
                                                        "name": "label",
                                                        "value": "3."
                                                    }
                                                ],
                                                "prose": "{{ insert: param, 03.01.01_odp.04 }} when system usage or the need-to-know changes for an individual.",
                                                "parts": []
                                            }
                                        ]
                                    },
                                    {
                                        "id": "03.01.01_smt.h",
                                        "name": "item",
                                        "props": [
                                            {
                                                "name": "label",
                                                "value": "h."
                                            }
                                        ],
                                        "prose": "Require that users log out of the system after {{ insert: param, 03.01.01_odp.05 }} of expected inactivity or when {{ insert: param, 03.01.01_odp.06 }}.",
                                        "parts": []
                                    }
                                ]
                            },
                            {
                                "id": "03.01.01_gdn",
                                "name": "guidance",
                                "prose": "This requirement focuses on account management for systems and applications. The definition and enforcement of access authorizations other than those determined by account type (e.g., privileged access, non-privileged access) are addressed in 03.01.02. System account types include individual, group, temporary, system, guest, anonymous, emergency, developer, and service. Users who require administrative privileges on system accounts receive additional scrutiny by personnel responsible for approving such accounts and privileged access. Types of accounts that organizations may prohibit due to increased risk include group, emergency, guest, anonymous, and temporary.\n\nOrganizations may choose to define access privileges or other attributes by account, type of account, or a combination of both. Other attributes required for authorizing access include restrictions on the time of day, day of the week, and point of origin. When defining other system account attributes, organizations consider system requirements (e.g., system upgrades, scheduled maintenance) and mission and business requirements (e.g., time zone differences, remote access to facilitate travel requirements).\n\nUsers who pose a significant security risk include individuals for whom reliable evidence indicates either the intention to use authorized access to the system to cause harm or that adversaries will cause harm through them. Close coordination among mission and business owners, system administrators, human resource managers, and legal staff is essential when disabling system accounts for high-risk individuals. Time periods for the notification of organizational personnel or roles may vary. Inactivity logout is behavior- or policy-based and requires users to take physical action to log out when they are expecting inactivity longer than the defined period. Automatic enforcement of inactivity logout is addressed by 03.01.10."
                            },
                            {
                                "id": "03.01.01_obj",
                                "name": "objective",
                                "props": [
                                    {
                                    "name": "label",
                                    "value": "03.01",
                                    "class": "sp800-171a"
                                    }
                                ],
                                "prose": "The organization manages information system accounts, including establishing, activating, modifying, reviewing, disabling, and removing accounts.",
                                "links": [
                                    {
                                    "href": "#03.01.01_smt",
                                    "rel": "statement-for"
                                    }
                                ],
                                "parts": [
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.ODP[01]",
                                    "prose": "The time period for account inactivity before disabling is defined."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.ODP[02]",
                                    "prose": "The time period within which to notify account managers and designated personnel or roles when accounts are no longer required is defined."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.ODP[03]",
                                    "prose": "The time period within which to notify account managers and designated personnel or roles when users are terminated or transferred is defined."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.a[01]",
                                    "prose": "System account types allowed are defined."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.b[01]",
                                    "prose": "System accounts are created in accordance with organizational policy, procedures, prerequisites, and criteria."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.c.01",
                                    "prose": "Authorized users of the system are specified."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.f.02",
                                    "prose": "System accounts are disabled when the accounts have been inactive for the defined time period."
                                    },
                                    {
                                    "name": "sub-objective",
                                    "id": "A.03.01.01.h",
                                    "prose": "Users are required to log out of the system after a defined period of expected inactivity or under specified circumstances."
                                    }
                                ]
                            },
                            {
                                "id": "03.01.01_asm_examine",
                                "name": "assessment-mehod",
                                "props": [
                                    {
                                        "name": "method",
                                        "value": "EXAMINE",
                                        "ns": "http://csrc.nist.gov/ns/rmf"
                                    },
                                    {
                                        "name": "label",
                                        "value": "03.01.01-Eaxmine",
                                        "class": "sp800-171a"
                                    }
                                ],
                                "parts": [
                                    {
                                        "name": "assessment-objects",
                                        "prose": "SELECT FROM: access control policy and procedures; personnel termination or transfer policies and procedures; procedures for account management; list of active system accounts and the name of the individual associated with each account; system design documentation; list of conditions for group and role membership; system configuration settings; notifications of recent transfers, separations, or terminations of employees; list of recently disabled system accounts and the name of the individual associated with each account; list of user activities that pose significant organizational risks; access authorization records; account management compliance reviews; system monitoring and audit records; system security plan; system-generated list of accounts removed; system-generated list of emergency accounts disabled; system-generated list of disabled accounts; other relevant documents and records"
                                    }
                                ]
                            },
                            {
                                "id": "03.01.01_asm_interview",
                                "name": "assessment-mehod",
                                "props": [
                                    {
                                        "name": "method",
                                        "value": "INTERVIEW",
                                        "ns": "http://csrc.nist.gov/ns/rmf"
                                    },
                                    {
                                        "name": "label",
                                        "value": "03.01.01-Interview",
                                        "class": "sp800-171a"
                                    }
                                ],
                                "parts": [
                                    {
                                        "name": "assessment-objects",
                                        "prose": "SELECT FROM: personnel with account management responsibilities; system administrators; personnel with information security responsibilities; system developers"
                                    }
                                ]
                            },
                            {
                                "id": "03.01.01_asm_test",
                                "name": "assessment-mehod",
                                "props": [
                                    {
                                        "name": "method",
                                        "value": "TEST",
                                        "ns": "http://csrc.nist.gov/ns/rmf"
                                    },
                                    {
                                        "name": "label",
                                        "value": "03.01.01-Test",
                                        "class": "sp800-171a"
                                    }
                                ],
                                "parts": [
                                    {
                                        "name": "assessment-objects",
                                        "props": [
                                        {
                                            "name": "object-option",
                                            "value": "processes for account management"
                                        },
                                        {
                                            "name": "object-option",
                                            "value": "mechanisms for implementing account management"
                                        }
                                        ],
                                        "prose": "Select one or more options above based on system implementation."
                                    }
                                ]
                            }
                        ]
                    }
                ]  
            }
