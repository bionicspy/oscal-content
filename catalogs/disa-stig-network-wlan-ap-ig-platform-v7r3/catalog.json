        "controls": [
          {
            "id": "SV-243211r856608_rule",
            "title": "WLAN signals must not be intercepted outside areas authorized for WLAN access.",
            "props": [
              {
                "name": "v-group-id",
                "value": "V-243211",
                "ns": "https://disa.mil/stig"
              },
              {
                "name": "sv-rule-id",
